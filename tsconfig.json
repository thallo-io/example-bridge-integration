{
    "compilerOptions": {
        "lib": ["ES2021"],
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noImplicitOverride": true,
    },
    "exclude": [ "node_modules"],
    "include": ["src"]
}
